@model DeletePersonCommand

<div>
    <form>
        <div class="row g-3">
            <div class="col-sm">
                @Html.TextBoxFor(x => x.Id, "Person Id You Want to Delete",new{@class ="form-control" , @placeholder=Html.DisplayNameFor(x=>x.Id)})
                @Html.ValidationMessageFor(x => x.Id, "", new{@class="text-danger" ,@readonly=true})
                </div>
            </div>
    </form>

    <form method="post">
        @Html.HiddenFor(x=>x.Id)
        <div class="row g-3">
            <div class="col-sm">
                <button type="submit" class="btn btn-success">Delete</button>
                <a class="btn btn-secondary" href="person/index">Cancel</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
